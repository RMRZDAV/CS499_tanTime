<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Weekly Forecast"
                android:textAlignment="center"
                android:layout_weight="0.15"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.85">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAlignment="center"
                        android:layout_weight="0.1"
                        android:hint="WED"/>
                    <TextView
                        android:id="@+id/day1temp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:textAlignment="center"
                        android:text="70/85"/>
                    <ImageView
                        android:id="@+id/day1icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/sunny"/>
                    <TextView
                        android:id="@+id/day1condition"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:textAlignment="center"
                        android:text="Sunny"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAlignment="center"
                        android:layout_weight="0.1"
                        android:hint="THU"/>
                    <TextView
                        android:id="@+id/day2temp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:textAlignment="center"
                        android:text="70/84"/>
                    <ImageView
                        android:id="@+id/day2icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/sunny"/>
                    <TextView
                        android:id="@+id/day2condition"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:textAlignment="center"
                        android:text="Sunny"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAlignment="center"
                        android:layout_weight="0.1"
                        android:hint="FRI"/>
                    <TextView
                        android:id="@+id/day3temp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:textAlignment="center"
                        android:text="69/84"/>
                    <ImageView
                        android:id="@+id/day3icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/sunny"/>
                    <TextView
                        android:id="@+id/day3condition"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:textAlignment="center"
                        android:text="Sunny"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_weight="0.25"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAlignment="center"
                        android:layout_weight="0.1"
                        android:hint="SAT"/>
                    <TextView
                        android:id="@+id/day4temp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:textAlignment="center"
                        android:text="69/85"/>
                    <ImageView
                        android:id="@+id/day4icon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:src="@drawable/sunny"/>
                    <TextView
                        android:id="@+id/day4condition"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:textAlignment="center"
                        android:text="Sunny"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="SUNRISE"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="5:53 a.m."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="SUNSET"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:text="8:01 p.m."/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.4"
            >
            <TextView
                android:id="@+id/suncompass_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Sun Compass"
                android:textAlignment="center"
                android:layout_weight="0.1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:src="@drawable/sun_icon"/>
            <ImageView
                android:id="@+id/compass"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:src="@drawable/towel_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_weight="0.1"
                android:text="Timer" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.9"
                >
                <TextView
                    android:id="@+id/text_view_countdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="0.33"
                    android:text="00:00:00"
                    android:textColor="@android:color/black"
                    android:textSize="23dp"/>
                <Button
                    android:id="@+id/button_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:layout_weight="0.33"/>
                <Button
                    android:id="@+id/button_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RESET"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:layout_weight="0.33"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>